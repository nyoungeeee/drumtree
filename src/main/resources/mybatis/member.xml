<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nyoung.drumtree.MemberMapper">

	<select id="selectMember"
		parameterType="java.util.Map"
		resultType="com.nyoung.drumtree.dto.MemberDTO">
		select memberIdx, memberID, memberPW, memberName, memo from test
		<if test="memberID != null">
			where memberID like '%${memberID}%'
		</if>
	</select>
	
	<insert id="signIn"
		parameterType="com.nyoung.drumtree.dto.MemberDTO">
		insert into test ('memberName', 'memberID', 'memberPW', 'memo') values (#{memberName}, #{memberID}, #{memberPW}, #{memo})
	</insert>

</mapper>